package app;

import entities.Order;
import services.OrderService;
import services.ShippingService;

public class Program {

	public static void main(String[] args) {

		// Criando um objeto Order
        Order order = new Order(1, 150.00, 10.0); // C칩digo 1, valor b치sico de R$ 150.00 com desconto de 10%

        // Criando uma inst칙ncia de ShippingService
        ShippingService shippingService = new ShippingService();

        // Criando uma inst칙ncia de OrderService com o ShippingService
        OrderService orderService = new OrderService(shippingService);

        // Calculando o total do pedido
        double totalPedido = orderService.total(order);

        // Exibindo o total do pedido
        System.out.println("Total do pedido: R$ " + totalPedido);

	}

}
